<h1>Listing Tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Kind</th>
		<th>Location</th>
    <th>Start</th>
    <th>End</th>
    <th>Time of Day</th>
    <th>Day in Week</th>
    <th>Active</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
    <th>Show Completed</th>
    <th>Show Missed</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.kind %></td>
    <td><%=h Location.find_by_id(task.location_id).name %></td>
    <td><%=h task.start.to_s(:just_date_long) %></td>
    <td><%=h task.end.to_s(:just_date_long) %></td>
    <td><%=h task.time_of_day.to_s(:am_pm) %></td>
    <td><%=h task.day_in_week %></td>
    <td><%=h task.active %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Show Completed', :action => :display_task_items, :id => task %></td>  


  </tr>
<% end %>
</table>

