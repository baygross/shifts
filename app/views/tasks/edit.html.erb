<h1>Editing Task</h1>

<% form_for(@task) do |f| %>
  <%= f.error_messages %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :kind %><br />
    <%= f.text_field :kind %>
  </p>
  <p>
    <%= f.label :location_id, text = 'Location' %><br />
    <%= select_tag 'task[location_id]', options_from_collection_for_select(@department.locations.active, :id, :name)%><br />
  </p>
  <p>
    <%= f.label :location_id, text = 'Calendar' %><br />
    <%= select_tag 'task[calendar_id]', options_from_collection_for_select(@department.calendars.active, :id, :name)%><br />
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </p>
  <p>
    <%= f.label :interval %> in minutes<br />
    <%= f.text_field :interval %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>

<%= link_to 'Show', @task %> |
<%= link_to 'Back', tasks_path %>