<% title "Help Request Form"%>

<p>
     <%= label_tag 'Location:' %><br />
     <%= collection_select(:location, :id, Location.all, :id, :name, options ={:prompt => "Select a location"}, :class =>'location') %><br/>
 </p>

<%= observe_field('location',
:url => {:controller => :data_objects,
         :update => 'object', 
         :layout => false},
:method => :get,           
:on => "change") %>

	
<p>
	 <%= label_tag 'Object:' %><br />
	 <%= @help_object = collection_select(:help_location, :data_object_id, @data_objects_at_location, :id, :name, options ={:prompt => "Select an Object"}, :class =>'object') %><br/>
</p>

